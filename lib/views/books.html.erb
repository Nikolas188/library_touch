<!DOCTYPE html>
<html>
  <head>
    <title>books</title>
  </head>
  <body>
    <h1>Books</h1>
    <% @library.books.uniq(&:title).map do |book| %>
      <%= book.title %>
      <br>
      <br>
    <% end %>
    <form id="create-book" method="post">
      <label for="title">Title:</label>
      <br>
      <input id="title" type="text" name="title">
      <br>
      <label for="author">Author:</label>
      <select name="author" form="create-book">
        <% @library.authors.each do |author| %>
          <option value="<%= author.name %>">
            <%= author.name %>
          </option>
        <% end %>
      </select>
      <input type="submit" value="Save">
    </form>
    <a href="/">BACK TO MAIN</a>
  </body>
</html>
